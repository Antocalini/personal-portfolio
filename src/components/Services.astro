---
import {services} from '../data/Info'
---

<div id="servicios" class="services-container">
    <div class="services-wrapper">
        <h2 class="services-title">Servicios</h2>
        
        <div class="services-grid">
            {services.map(service => (
                <div class="service-card">
                    <div class="service-card-bg"></div>
                    <div class="service-card-content">
                        <div class="service-icon">
                            <span class="icon-emoji">{service.icon}</span>
                        </div>
                        <h3 class="service-name">{service.name}</h3>
                        <p class="service-description">{service.description}</p>
                        <div class="service-technologies">
                            {service.technologies.map(tech => (
                                <span class="tech-tag">
                                    {tech}
                                </span>
                            ))}
                        </div>
                       
                    </div>
                </div>
            ))}
        </div>
    </div>
</div>


<style>
    .services-container {
        position: relative;
        margin-top: 0;
        background: linear-gradient(to bottom, 
            rgba(0, 0, 0, 1) 0%, 
            rgba(0, 0, 0, 0.8) 20%, 
            rgba(88, 28, 135, 0.3) 50%, 
            rgba(0, 0, 0, 0.8) 80%, 
            rgba(0, 0, 0, 1) 100%
        );
        padding: 8rem 0;
    }
    
    .services-wrapper {
        position: relative;
        max-width: 80rem;
        margin: 0 auto;
        padding: 0 1rem;
    }
    
    .services-title {
        font-size: 2.25rem;
        font-weight: bold;
        letter-spacing: -0.025em;
        color: white;
        margin-bottom: 3rem;
        text-align: center;
    }
    
    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
    }
    
    .service-card {
        position: relative;
        height: 100%;
        min-height: 320px;
    }
    
    .service-card-bg {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(147, 51, 234, 0.15), rgba(88, 28, 135, 0.25));
        filter: blur(20px);
        transition: all 0.4s ease;
        border-radius: 1.5rem;
    }
    
    .service-card:hover .service-card-bg {
        background: linear-gradient(135deg, rgba(147, 51, 234, 0.25), rgba(88, 28, 135, 0.35));
        filter: blur(16px);
    }
    
    .service-card-content {
        position: relative;
        background: linear-gradient(135deg, 
            rgba(15, 15, 15, 0.9) 0%, 
            rgba(30, 30, 30, 0.8) 50%, 
            rgba(15, 15, 15, 0.9) 100%
        );
        backdrop-filter: blur(12px);
        border-radius: 1.5rem;
        padding: 1.5rem;
        border: 1px solid rgba(255, 255, 255, 0.08);
        height: 100%;
        min-height: 320px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
    }
    
    .service-card-content::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, 
            transparent 0%, 
            rgba(147, 51, 234, 0.5) 50%, 
            transparent 100%
        );
        opacity: 0;
        transition: opacity 0.4s ease;
    }
    
    .service-card:hover .service-card-content {
        transform: translateY(-8px);
        border-color: rgba(147, 51, 234, 0.3);
        box-shadow: 0 20px 40px rgba(147, 51, 234, 0.1);
    }
    
    .service-card:hover .service-card-content::before {
        opacity: 1;
    }
    
    .service-icon {
        width: 4rem;
        height: 4rem;
        background: linear-gradient(135deg, rgba(147, 51, 234, 0.2), rgba(88, 28, 135, 0.3));
        border-radius: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        border: 1px solid rgba(147, 51, 234, 0.2);
        transition: all 0.4s ease;
    }
    
    .service-card:hover .service-icon {
        background: linear-gradient(135deg, rgba(147, 51, 234, 0.3), rgba(88, 28, 135, 0.4));
        border-color: rgba(147, 51, 234, 0.4);
        transform: scale(1.05);
    }
    
    .icon-emoji {
        font-size: 1.75rem;
        filter: grayscale(0.3);
        transition: filter 0.4s ease;
    }
    
    .service-card:hover .icon-emoji {
        filter: grayscale(0);
    }
    
    .service-name {
        font-size: 1.25rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.75rem;
        letter-spacing: -0.025em;
    }
    
    .service-description {
        color: rgb(209, 213, 219);
        margin-bottom: 1rem;
        flex-grow: 1;
        line-height: 1.6;
        font-size: 0.875rem;
    }
    
    .service-technologies {
        display: flex;
        flex-wrap: wrap;
        gap: 0.375rem;
        margin-bottom: 1rem;
        justify-content: center;
    }
    
    .tech-tag {
        background: linear-gradient(135deg, rgba(88, 28, 135, 0.4), rgba(147, 51, 234, 0.3));
        color: rgb(229, 231, 235);
        padding: 0.25rem 0.5rem;
        border-radius: 0.5rem;
        font-size: 0.7rem;
        font-weight: 500;
        border: 1px solid rgba(126, 34, 206, 0.2);
        transition: all 0.3s ease;
        backdrop-filter: blur(4px);
    }
    
    .service-card:hover .tech-tag {
        background: linear-gradient(135deg, rgba(88, 28, 135, 0.6), rgba(147, 51, 234, 0.5));
        border-color: rgba(126, 34, 206, 0.4);
        color: white;
        transform: translateY(-1px);
    }
    
    
    @media (min-width: 640px) {
        .services-wrapper {
            padding: 0 1.5rem;
        }
        
        .services-title {
            font-size: 3rem;
        }
        
        .service-card {
            min-height: 340px;
        }
        
        .service-card-content {
            min-height: 340px;
            padding: 2rem;
        }
        
        .service-icon {
            width: 4.5rem;
            height: 4.5rem;
        }
        
        .icon-emoji {
            font-size: 2rem;
        }
        
        .service-name {
            font-size: 1.375rem;
        }
        
        .service-description {
            font-size: 0.9rem;
        }
    }
    
    @media (min-width: 768px) {
        .services-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    
    @media (min-width: 1024px) {
        .services-wrapper {
            padding: 0 2rem;
        }
        
        .services-grid {
            grid-template-columns: repeat(3, 1fr);
        }
        
        .service-card {
            min-height: 360px;
        }
        
        .service-card-content {
            min-height: 360px;
        }
        
        .service-icon {
            width: 5rem;
            height: 5rem;
        }
        
        .icon-emoji {
            font-size: 2.25rem;
        }
    }
    </style>