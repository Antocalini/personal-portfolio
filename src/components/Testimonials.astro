---
import { testimonials } from '../data/Info';
---

<div id="testimonios" class="testimonials-container">
    <div class="testimonials-wrapper">
        <h2 class="testimonials-title">Testimonios</h2>
        
        <div class="testimonials-grid">
            {testimonials.map(testimonial => (
                <div class="testimonial-card">
                    <div class="testimonial-card-bg"></div>
                    <div class="testimonial-card-content">
                        <div class="quote-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z" fill="currentColor"/>
                            </svg>
                        </div>
                        <p class="testimonial-text">"{testimonial.text}"</p>
                        <div class="testimonial-author">
                            <div class="author-avatar">
                                <img src={testimonial.avatar} alt={testimonial.name} />
                            </div>
                            <div class="author-info">
                                <h4 class="author-name">{testimonial.name}</h4>
                                <p class="author-position">{testimonial.position}</p>
                                <p class="author-company">{testimonial.company}</p>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</div>


<style>
    .testimonials-container {
        position: relative;
        margin-top: 0;
        background: linear-gradient(to bottom, rgba(147, 51, 234, 0.2), rgba(88, 28, 135, 0.3), transparent);
        padding: 8rem 0;
    }
    
    .testimonials-wrapper {
        position: relative;
        max-width: 80rem;
        margin: 0 auto;
        padding: 0 1rem;
    }
    
    .testimonials-title {
        font-size: 2.25rem;
        font-weight: bold;
        letter-spacing: -0.025em;
        color: white;
        margin-bottom: 3rem;
        text-align: center;
    }
    
    .testimonials-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
    }
    
    .testimonial-card {
        position: relative;
        height: 100%;
    }
    
    .testimonial-card-bg {
        position: absolute;
        inset: 0;
        background: rgba(147, 51, 234, 0.2);
        filter: blur(24px);
        transition: background-color 0.3s ease;
    }
    
    .testimonial-card:hover .testimonial-card-bg {
        background: rgba(147, 51, 234, 0.3);
    }
    
    .testimonial-card-content {
        position: relative;
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(8px);
        border-radius: 1rem;
        padding: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        height: 100%;
        display: flex;
        flex-direction: column;
        transition: transform 0.3s ease;
    }
    
    .testimonial-card:hover .testimonial-card-content {
        transform: translateY(-4px);
    }
    
    .quote-icon {
        color: rgba(147, 51, 234, 0.8);
        margin-bottom: 1rem;
        width: 24px;
        height: 24px;
    }
    
    .testimonial-text {
        color: rgb(209, 213, 219);
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
        flex-grow: 1;
        font-style: italic;
    }
    
    .testimonial-author {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-top: auto;
    }
    
    .author-avatar {
        width: 3rem;
        height: 3rem;
        border-radius: 50%;
        overflow: hidden;
        border: 2px solid rgba(147, 51, 234, 0.5);
        flex-shrink: 0;
    }
    
    .author-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .author-info {
        flex-grow: 1;
    }
    
    .author-name {
        font-size: 1rem;
        font-weight: 600;
        color: white;
        margin-bottom: 0.25rem;
    }
    
    .author-position {
        font-size: 0.875rem;
        color: rgba(147, 51, 234, 0.9);
        margin-bottom: 0.125rem;
        font-weight: 500;
    }
    
    .author-company {
        font-size: 0.75rem;
        color: rgb(156, 163, 175);
    }
    
    @media (min-width: 640px) {
        .testimonials-wrapper {
            padding: 0 1.5rem;
        }
        
        .testimonials-title {
            font-size: 3rem;
        }
    }
    
    @media (min-width: 768px) {
        .testimonials-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    
    @media (min-width: 1024px) {
        .testimonials-wrapper {
            padding: 0 2rem;
        }
        
        .testimonials-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }
    </style>