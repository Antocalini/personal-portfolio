---
import { personalInfo } from '../data/Info';
---

<div class="hero">
 
    <div class="hero-background">
        <div class="gradient-layer-1"></div>
        <div class="gradient-layer-2"></div>
        <div class="gradient-layer-3"></div>
    </div>

    <div class="hero-content">
        <div class="status-badge">
            <div class="status-dot"></div>
            <span class="status-text">Disponible para nuevos proyectos</span>
        </div>

        <h1 class="hero-title">
            {personalInfo.name}<br />
            <span class="hero-subtitle">{personalInfo.title}</span>
        </h1>

        <p class="hero-description">
            {personalInfo.summary}
        </p>

        <div class="hero-buttons">
            <a href="#contacto" class="btn btn-primary">
                Contactar
            </a>
            <a href="/Resume.pdf" target="_blank" class="btn btn-secondary">
                Descargar CV
            </a>
        </div>

     
        <div class="social-links">
            <a href={personalInfo.linkedin} target="_blank" class="social-link">
                <i class="fab fa-linkedin"></i>
            </a>
            <a href={personalInfo.github} target="_blank" class="social-link">
                <i class="fab fa-github"></i>
            </a>
            <a href={`mailto:${personalInfo.email}`} class="social-link">
                <i class="fas fa-envelope"></i>
            </a>
        </div>

       
        <div class="profile-container">
            <div class="profile-image">
                <div class="profile-glow-1"></div>
                <div class="profile-glow-2"></div>
                <div class="profile-circle">
                    <span class="profile-initial">{personalInfo.name.charAt(0)}</span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero {
        position: relative;
        padding-top: 8rem;
        padding-bottom: 0;
    }

    @media (min-width: 640px) {
        .hero {
            padding: 10rem;
        }
    }

    .hero-background {
        position: absolute;
        inset: 0;
    }

    .gradient-layer-1 {
        position: absolute;
        inset: 0;
        background: linear-gradient(to bottom, rgba(88, 28, 135, 0.3), rgba(88, 28, 135, 0.2), transparent);
    }

    .gradient-layer-2 {
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at top, rgba(147, 51, 234, 0.3), rgba(88, 28, 135, 0.2), transparent);
    }

    .gradient-layer-3 {
        position: absolute;
        inset: 0;
        background: conic-gradient(from 90deg at 50% 0%, #3b0764, #0c0a09 25%, #0c0a09 75%, #3b0764 100%);
        opacity: 0.5;
    }

    .hero-content {
        position: relative;
        max-width: 80rem;
        margin: 0 auto;
        padding: 0 1rem;
        text-align: center;
    }

    @media (min-width: 640px) {
        .hero-content {
            padding: 0 1.5rem;
        }
    }

    @media (min-width: 1024px) {
        .hero-content {
            padding: 0 2rem;
        }
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        border-radius: 9999px;
        padding: 0.25rem 1rem;
        margin-bottom: 2rem;
        background-color: rgba(88, 28, 135, 0.5);
        border: 1px solid rgba(126, 34, 206, 0.5);
        box-shadow: 0 0 30px -5px rgba(147, 51, 234, 0.5);
    }

    .status-dot {
        width: 0.5rem;
        height: 0.5rem;
        border-radius: 50%;
        background-color: rgb(196, 181, 253);
        margin-right: 0.5rem;
    }

    .status-text {
        font-size: 0.875rem;
        color: rgb(196, 181, 253);
    }

    .hero-title {
        font-size: 2.25rem;
        font-weight: 700;
        letter-spacing: -0.025em;
        color: white;
        margin-bottom: 1.5rem;
        line-height: 1.1;
    }

    @media (min-width: 640px) {
        .hero-title {
            font-size: 3.75rem;
        }
    }

    @media (min-width: 1024px) {
        .hero-title {
            font-size: 4.5rem;
        }
    }

    .hero-subtitle {
        color: rgb(196, 181, 253);
    }

    .hero-description {
        max-width: 42rem;
        margin: 0 auto 2rem auto;
        font-size: 1.125rem;
        color: rgb(209, 213, 219);
    }

    @media (min-width: 640px) {
        .hero-description {
            font-size: 1.25rem;
        }
    }

    .hero-buttons {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1rem;
        margin-bottom: 4rem;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s ease;
        border: none;
        cursor: pointer;
        display: inline-block;
    }

    .btn-primary {
        background-color: white;
        color: black;
    }

    .btn-primary:hover {
        background-color: rgb(243, 244, 246);
    }

    .btn-secondary {
        background-color: transparent;
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
    }

    .btn-secondary:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin-bottom: 4rem;
    }

    .social-link {
        color: rgb(156, 163, 175);
        transition: color 0.2s ease;
        text-decoration: none;
    }

    .social-link:hover {
        color: white;
    }

    .social-link i {
        font-size: 1.5rem;
    }

    .profile-container {
        position: relative;
        max-width: 20rem;
        margin: 2.5rem auto 0 auto;
    }

    .profile-image {
        position: relative;
        border-radius: 50%;
        overflow: hidden;
        width: 12rem;
        height: 12rem;
        margin: 0 auto;
    }

    .profile-glow-1 {
        position: absolute;
        inset: 0;
        background-color: rgba(147, 51, 234, 0.4);
        filter: blur(50px);
    }

    .profile-glow-2 {
        position: absolute;
        inset: 0;
        background-color: rgba(168, 85, 247, 0.2);
        filter: blur(100px);
    }

    .profile-circle {
        width: 12rem;
        height: 12rem;
        border-radius: 50%;
        background: linear-gradient(to bottom right, rgb(168, 85, 247), rgb(88, 28, 135));
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        border: 2px solid rgba(255, 255, 255, 0.2);
    }

    .profile-initial {
        color: white;
        font-size: 3.75rem;
        font-weight: 700;
    }
</style>